{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@root/*": ["src/*"],
      "@users/*": ["src/users/*"],
      "@auth/*": ["src/auth/*"],
      "@common/*": ["src/common/*"],
      "@workspaces/*": ["src/workspaces/*"],
      "@config": ["src/config"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules"]
}
